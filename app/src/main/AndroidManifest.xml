<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.aspiretechnovations.aml">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.WishlistActivity"></activity>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.OtpLoginActivity" />
        <activity android:name=".activities.AddAddressActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.VerificationActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.ServiceFilterActivity" />
        <activity android:name=".activities.LocationSelectionActivity" />
        <activity android:name=".activities.TraderRegisterActivity" />
        <activity android:name=".activities.TraderLoginActivity" />
        <activity android:name=".activities.CategoryDisplayActivity" />
        <activity
            android:name=".activities.ServiceSelectionActivity"
            android:label="@string/title_activity_service_selection"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.ProductListActivity" />
        <activity android:name=".activities.ProductDetailActivity" />
        <activity android:name=".activities.CheckOutPageActivity" />
    </application>

</manifest>