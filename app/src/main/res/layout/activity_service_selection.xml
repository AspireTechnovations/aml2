<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:context=".activities.CategoryDisplayActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/space_48"
            android:padding="@dimen/space_5"
            >

            <EditText
                android:layout_width="@dimen/space_140"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center_vertical"
                android:drawableRight="@drawable/ic_search"
                android:paddingRight="@dimen/space_5"
                android:hint="Search"
                android:textSize="@dimen/text_size_14sp"
                android:paddingLeft="@dimen/space_20"
                android:background="@drawable/drawable_search"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    />

            </LinearLayout>


        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_10"
                    android:orientation="vertical"
                    android:background="@color/bar_background"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Honda CBR 250"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/space_10"
                        android:layout_gravity="left"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16sp"
                        />


                </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:padding="@dimen/space_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >

        <ImageView
            android:paddingTop="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_50"
            android:src="@drawable/ic_tyres"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine Component"
            android:textStyle="bold"
            android:paddingLeft="@dimen/space_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/bar_background"
            android:textSize="@dimen/text_size_16sp"
            />



    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_25"
        android:layout_margin="@dimen/space_5"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/shape_border_grey"
        android:text="Change"
        android:textAllCaps="true"
        android:textColor="@color/aluminum"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_12sp"
        />

</FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_10"
                    android:orientation="vertical"
                    android:background="@color/bar_background"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Engine Sub Components"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/space_10"
                        android:layout_gravity="left"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12sp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_border_grey"
                        android:drawableLeft="@drawable/ic_search"
                        android:paddingLeft="@dimen/space_10"
                        android:paddingTop="@dimen/space_5"
                        android:layout_margin="@dimen/space_10"
                        android:paddingBottom="@dimen/space_5"
                        />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_sub_services"
                    ></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>