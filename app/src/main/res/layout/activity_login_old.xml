<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.OtpLoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logo Here"
        android:layout_margin="@dimen/space_20"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_120"
            android:src="@drawable/ic_lock"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textSize="@dimen/text_size_24sp"
            android:fontFamily="serif"
            android:layout_margin="@dimen/space_22"
            android:textColor="@color/aluminum"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your Mobile Number"
            android:textSize="@dimen/text_size_20sp"

            android:textColor="@color/aluminum"
            android:layout_marginBottom="@dimen/space_25"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:paddingTop="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:paddingLeft="@dimen/space_10"
            android:background="@drawable/shape_border_grey"
            android:layout_margin="@dimen/space_20"
            />

        <ImageView
            android:layout_width="@dimen/space_60"
            android:id="@+id/im_next"
            android:layout_height="@dimen/space_60"
            android:layout_marginTop="@dimen/space_15"
            android:src="@drawable/ic_next"
            />


    </LinearLayout>





</LinearLayout>