<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.VerificationActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logo Here"
        android:layout_margin="@dimen/space_20"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_18sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_120"
            android:src="@drawable/ic_verify"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textSize="@dimen/text_size_24sp"
            android:fontFamily="serif"
            android:layout_margin="@dimen/space_22"
            android:textColor="@color/aluminum"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP has been sent to your Mobile Number"
            android:textSize="@dimen/text_size_16sp"

            android:textColor="@color/aluminum"
            android:layout_marginBottom="@dimen/space_25"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="@dimen/space_20"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"

                android:background="@drawable/shape_border_grey"

                />
            <EditText
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"

                android:background="@drawable/shape_border_grey"

                />
            <EditText
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"

                android:background="@drawable/shape_border_grey"

                />
            <EditText
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:background="@drawable/shape_border_grey"

                />
        </LinearLayout>



        <ImageView
            android:layout_width="@dimen/space_60"
            android:layout_height="@dimen/space_60"
            android:layout_marginTop="@dimen/space_15"
            android:src="@drawable/ic_next"
            android:id="@+id/im_next"
            />


    </LinearLayout>





</LinearLayout>