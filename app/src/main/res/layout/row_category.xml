<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_10"
    android:id="@+id/cv_parent"

    android:layout_margin="@dimen/space_5"
    app:cardCornerRadius="@dimen/space_5"

    app:cardElevation="@dimen/space_10"
    app:cardMaxElevation="@dimen/space_10"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/space_84"
            android:layout_height="@dimen/space_50"
            android:src="@drawable/ic_car"
            android:id="@+id/im_category"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exteriors"
            android:id="@+id/tv_title"
            android:textColor="@color/oil"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_14sp"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>